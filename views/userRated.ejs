<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <title>Movia</title>
</head>

<body>
  <!-- include the navbar from templates folder -->
  <%- include('./../templates/navbar.ejs', {loginDisplay:"block", signupDisplay:"block"}) %>
  <div class="otherThanNav">
    <div class="container">
      <h1 class="text-center mt-3">Movies</h1>
      <div class="row">
        <div class="col-12">
          <h2 class="text-center">Rated By You</h2>
        </div>
        </div>
      </div>
      <% if (!myratings[user.email]) { %>
        <div class="alert alert-info" role="alert">
          You have not rated any movies yet.
        </div>
      <% } else {  %>
      <div class="movie-container" style="margin: 20px;">
        <div class="row mb-3 text-center justify-content-center">
          <% for(let i = 0; i < myratings[user.email].length; i++) { %>

          <%- include('./../templates/cardForRatedRecom.ejs', {movieToAdded : myratings[user.email][i].movie, i, myratings, filename:'userRated.ejs'}) %>
          <% } %>
        </div>
      </div>
      <% } %>


</body>
</html>