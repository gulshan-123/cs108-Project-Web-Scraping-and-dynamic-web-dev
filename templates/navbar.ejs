<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;" id="navbar">
    <a class="navbar-brand" href="/" style="font-weight: 700;">
        Movia
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</span></a>
            </li>
        </ul>
        
        <ul class="navbar-nav">
            <li class="nav-item dropright">
                <a class="nav-link dropdown-toggle" href="/" id="navbarDropdown" role="button" data-toggle="dropdown" data-close-others="false" aria-haspopup="true" aria-expanded="false">
                    <strong>Genres</strong>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <div class="d-md-flex justify-content-md-start">
                        <div class="px-1">
                            <% var genres = ['action', 'adventure', 'animation', 'biography', 'comedy', 'crime', 'drama', 'family', 'fantasy', 'film-noir','history']; %>
                            <% genres.forEach(function(genre) { %>
                                <a class="dropdown-item" href="/genre?genre=<%= genre %>"><%= genre.charAt(0).toUpperCase() + genre.slice(1) %></a>
                            <% }); %>
                        </div>
                        <div class="px-1">
                            <% var genres = ['horror', 'music', 'musical', 'mystery', 'romance', 'sci-fi', 'short', 'sport', 'thriller', 'war', 'western']; %>
                            <% genres.forEach(function(genre) { %>
                                <a class="dropdown-item" href="/genre?genre=<%= genre %>"><%= genre.charAt(0).toUpperCase() + genre.slice(1) %></a>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </li>
        </ul>

        <% if (user) { %>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/recommend">Recommendations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/userRated">Rated</a>
                </li>
            </ul>
        <% } else { %>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:3000/login" style="display: <%= loginDisplay %>;">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:3000/signup" style="display: <%= signupDisplay %>;">Sign Up</a>
                </li>
            </ul>
        <% } %>


        <form id="search-form" class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" id="search" placeholder="Search movies..." aria-label="Search">
            <button class="btn btn-outline-primary my-2 my-sm-0 " type="submit">Search</button>
        </form>
    </div>
  </nav>