<%# Card to show the Rated(Average Rating of our all sites user) in all of the cards %>

<%
          let total = 0;
          let count = 0;
          let specificMovie = movieTitle;
      
          for (let user in myratings) {
              // For each user, iterate over their rated movies
              for (let rating of myratings[user]) {
                // if movie found in the rated movies, then add the rating to total and increment the count
                  if (rating.movie.Title === specificMovie) { 
                      total += parseFloat(rating.myrating);
                      count++;
                  }
              }
          }
      
          let average;
          if (count === 0) { // corner case
              average = 0;
          }
          else {
              average = (total / count);
              average = average.toFixed(2);
          }
%>
<% if(average != 0) { %>
    <h6>Rated:&nbsp;<small class="text-muted"><%= average %>/10</small>
<% } %>